block header 
    ul.navbar-nav.mr-auto
    span.navbar-text
        a.nav-link(href='/register')
            span  Register 
    span.navbar-text
        a.nav-link(href='/register')
            span  Need help?
block content
    div.intro
        h2 
    div.row.d-flex.justify-content-center
        div.col-md-5.col-md-offset-5
            if alert == "error"
                div.alert.alert-danger ERROR! username or password is incorrect!
            form.login-form.align-center(method="POST" action='/login')
                h4 Login into your account
                div.form-group.col
                    input.form-control(type="username" name='username' placeholder="Username")
                div.form-group.col
                    input.form-control(type="password" placeholder="Password" name='password')
                div.form-group.col
                    button.btn.btn-sm.btn-primary.login-bt(type="submit") Login
                div.form-group.col 
                          
