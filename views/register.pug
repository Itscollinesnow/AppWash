extends layout.pug

block header
    ul.navbar-nav.mr-auto
        li.nav-item
    span.navbar-text
        a.nav-link(href='/')
            span  Login
block content
    div.row.d-flex.justify-content-center
        div.col-md-6.col-md-3.col-md-offset-6.reg-form
            if alert == "success"
                div.alert.alert-success Manager added successfully
            if alert == "error"
                div.alert.alert-danger An error occurred, failed to add manager
            form(method="POST" action='/register' name='register' id="register")
                h4 Register As Manager  
                div.form-row 
                    div.form-group.col
                        label Username
                        input.form-control(type="text" name='username' placeholder="Username" id="username") 
                        small(style="color:red;" id="unameErr") 
                div.form-row
                    div.form-group.col
                        label Firstname
                        input.form-control(type="text" name='firstname' placeholder="Firstname" id="firstname")
                        small(style="color:red;" id="nameErr")   
                    div.form-group.col
                        label Lastname
                        input.form-control(type="text" name='lastname' placeholder="Lastname" id="lastname")
                        small(style="color:red;" id="nameErr") 
                div.form-row
                    div.col.form-group
                        label Password
                        input.form-control(type='password' name='password' placeholder="Password" id="pwd") 
                        small(style="color:red;" id="pwdErr")   
                    div.form-group.col
                        label Re-type Password
                        input.form-control(type='password' name='Password' placeholder="Confirm Password" id="pwd2")
                        small(style="color:red;" id="pwdErr")   
                div.form-row
                    div.col.form-group
                        button.btn.btn-primary.btn-block.reg-bt(type="submit") Register
