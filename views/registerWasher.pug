extends layout2.pug
block header
    ul#pills-tab.navbar-nav.mr-auto.justify-content-center.nav.nav-pills.mb-3(role="tablist")
        li.nav-item
            a#pills-home-tab.nav-link(data-toggle='pill' href='/register/car' role='tab' aria-controls='pills-home' aria-selected='true')
                span Register Car
        li.nav-item
            a#pills-profile-tab.nav-link.active(data-toggle='pill' href='/register/washer' role='tab' aria-controls='pills-profile' aria-selected='false')
                span Register Washer
        li.nav-item
            a#pills-contact-tab.nav-link(data-toggle='pill' href='/register/expenses' role='tab' aria-controls='pills-contact' aria-selected='false')
                span Add Expenses
        li.nav-item
            a#pills-contact-tab.nav-link(data-toggle='pill' href='/reports/collection' role='tab' aria-controls='pills-contact' aria-selected='false')
                span Reports 
    span.navbar-text
        a.nav-link(href='/')
            span  Sign Out
    #pills-tabContent.tab-content
block content
    div.row.d-flex.justify-content-center
        div.col-md-6
            if alert == "success"
                div.alert.alert-success Washer added successfully
            if alert == "error"
                div.alert.alert-danger An error occurred, failed to add washer
            form.car-form(method="POST" action='/register/washer' name='register-washer')
                h4 Add a Washer
                div.form-row
                    div.form-group.col
                        label Firstname
                        input.form-control(type="firstname" name='firstname' placeholder="Firstname")
                    div.form-group.col
                        label Lastname
                        input.form-control(type="lastname" name='lastname' placeholder="Lastname")
                div.form-row 
                    div.form-group.col-4
                        label Username
                        input.form-control(type="username" name='username' placeholder="username")    
                    div.form-group.col-4
                        label Gender 
                        select.form-control(name="gender")
                            option(value="male")  Male
                            option(value="female") Female
                    div.form-group.col-4
                        label Date of Birth
                        input.form-control(type="date" name="dob")
                div.form-row
                    div.col.form-group
                        label NIN
                        input.form-control(name='nin' placeholder="NIN")  
                    div.form-group.col
                        label Address
                        input.form-control(type='address' name='address' placeholder="Address")
                div.form-row
                    div.col.form-group
                        button.btn.btn-primary.btn-block Register
